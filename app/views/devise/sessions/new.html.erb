<div class="container login">
  <h2>Ingreso</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field-login">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", type:"imput1", placeholder:"Email" %>
    </div>

    <div class="field-login">
      <%= f.password_field :password, autocomplete: "current-password", type:"password", placeholder:"Password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Recordar contraseÃ±a" %>
      </div>
    <% end %>

    <div class="actions d-flex justify-content-center">
      <%= f.submit "Ingresar", class:"btn btn-log" %>
    </div>
  <% end %>
</div>
